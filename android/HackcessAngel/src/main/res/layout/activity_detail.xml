<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:id="@+id/imageViewNotif"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/notif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fauteuil électrique"
        android:id="@+id/textViewChair"
        android:layout_gravity="center_horizontal"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:id="@+id/imageViewInfoSup"
        android:src="@drawable/info_sup" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewUrgenceCall"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_urgencecall"
        android:layout_marginTop="-18dp" />

    <TextView
        android:layout_width="271dp"
        android:layout_height="66dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="En cas d'urgence, veuillez utiliser les bornes d'appel à votre disposition ou apeller le 3117."
        android:id="@+id/textViewUrgence"
        android:autoText="false"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginRight="-24dp"
        android:fontFamily="Lato-Lig"
        />

    <ImageButton
        android:layout_width="208dp"
        android:layout_height="38dp"
        android:id="@+id/imageButtonJmd"
        android:src="@drawable/button_jmd"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageViewButtonMap"
        android:src="@drawable/button_carte"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="35dp" />
</LinearLayout>

