<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <org.osmdroid.views.MapView
            android:id="@+id/openmapview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonInfo"
                android:src="@drawable/info"
                android:background="#f6fff1"
                android:paddingEnd="20dp"
                android:layout_column="3" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMove"
                android:src="@drawable/move"
                android:background="#fffef6"
                android:paddingEnd="20dp"

                android:layout_column="6" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDeaf"
                android:src="@drawable/audio"
                android:background="#f6fff1"
                android:paddingEnd="20dp"

                android:layout_column="7" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonChair"
                android:src="@drawable/moteur"
                android:background="#f6fff1"
                android:paddingEnd="20dp"

                android:layout_column="9" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBlind"
                android:src="@drawable/visuel"
                android:background="#f6fff1"
                android:paddingEnd="20dp"
                android:layout_column="14" />
        </TableRow>


    </TableLayout>


</LinearLayout>